<!DOCTYPE html>
<html>
  <head>
    <title>ToDO</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <% if user_signed_in? %>
      <%= link_to "ログアウト", destroy_user_session_path, method: :delete %>
      <%= link_to "一覧画面へ", tasks_path %>
      <%= link_to "投稿画面へ", new_task_path %>
    <% else %>
      <%= link_to "ログインする", new_user_session_path, class: 'post' %>
      <%= link_to "新規登録する", new_user_registration_path, class: 'post' %>
    <% end %>

    <%= yield %>
  </body>
</html>
